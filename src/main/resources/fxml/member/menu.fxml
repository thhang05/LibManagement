<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="menuBox" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
      prefHeight="500.0" prefWidth="200.0" spacing="50.0" xmlns="http://javafx.com/javafx/23.0.1"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="UI.MenuController">
    <children>
        <Button fx:id="removeMenuButton" mnemonicParsing="false" onAction="#removeMenuBox" prefHeight="30.0"
                prefWidth="30.0" styleClass="button-except-account" visible="false">
            <graphic>
                <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                    <Image url="@../../image/member/menu/collapse_icon.png"/>
                </ImageView>
            </graphic>
            <VBox.margin>
                <Insets left="150.0"/>
            </VBox.margin>
        </Button>
        <Button fx:id="home" alignment="CENTER" mnemonicParsing="false" onAction="#showHomeScene" prefHeight="30.0"
                prefWidth="150.0" styleClass="button-except-account" text="Home" textAlignment="CENTER">
            <graphic>
                <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                    <Image url="@../../image/member/menu/home_icon.png"/>
                </ImageView>
            </graphic>
            <font>
                <Font name="Comic Sans MS Bold" size="15.0"/>
            </font>
        </Button>
        <Button fx:id="borrowedBookButton" alignment="CENTER" mnemonicParsing="false" onAction="#showOnLoanBooksScene"
                prefWidth="150.0" styleClass="button-except-account" text="On Loan Books" textAlignment="CENTER"
                wrapText="true">
            <graphic>
                <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                    <Image url="@../../image/member/menu/borrowedBook_icon.png"/>
                </ImageView>
            </graphic>
            <font>
                <Font name="Comic Sans MS Bold" size="15.0"/>
            </font>
        </Button>
        <Button fx:id="returnedBooksButton" mnemonicParsing="false" onAction="#showReturnedBooksScene" prefWidth="150.0"
                styleClass="button-except-account" text="Returned Books" textAlignment="CENTER" wrapText="true">
            <graphic>
                <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                    <Image url="@../../image/member/menu/returnedBook_icon.png"/>
                </ImageView>
            </graphic>
            <font>
                <Font name="Comic Sans MS Bold" size="15.0"/>
            </font>
        </Button>
    </children>
    <padding>
        <Insets left="20.0" top="25.0"/>
    </padding>
</VBox>

