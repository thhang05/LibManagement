<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>

<AnchorPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="Controller.Account.LibrarianMenuController"
            prefHeight="400.0" prefWidth="600.0"
            style="-fx-background-color: #E6F2FF;"
            stylesheets="@/style.css">

    <!-- Header -->
    <HBox spacing="20" prefHeight="50" prefWidth="600"
          style="-fx-background-color: #4A7CB6;"
          AnchorPane.topAnchor="0.0"
          AnchorPane.leftAnchor="0.0"
          AnchorPane.rightAnchor="0.0"
          alignment="CENTER">
        <Label text="LIBRARY MANAGEMENT"
               style="-fx-text-fill: white;
                      -fx-font-size: 24px;
                      -fx-font-weight: bold;"/>
    </HBox>

    <!-- User Info Button -->
    <HBox spacing="8" AnchorPane.topAnchor="8" AnchorPane.rightAnchor="12">
        <Label fx:id="usernameLabel"
               style="-fx-text-fill: #2C3E50;
                      -fx-font-size: 16px;
                      -fx-padding: 5 0 0 0;"/>
        <Button fx:id="avatarButton"
                styleClass="avatar-button"
                prefWidth="40"
                prefHeight="40"
                onAction="#handleAvatarClick"/>
    </HBox>

    <!-- Menu Buttons -->
    <VBox spacing="20" alignment="CENTER"
          AnchorPane.topAnchor="120.0"
          AnchorPane.leftAnchor="100.0">
        <HBox spacing="60" alignment="CENTER">
            <Button text="Add Book"
                    style="-fx-background-color: #FFF5E1;
                           -fx-text-fill: #333333;
                           -fx-font-weight: bold;
                           -fx-border-color: #E6C229;
                           -fx-border-width: 2;
                           -fx-border-radius: 5;"
                    prefWidth="150"
                    prefHeight="80"
                    onAction="#handleAddBook"/>
            <Button text="Edit Book"
                    style="-fx-background-color: #FFF5E1;
                           -fx-text-fill: #333333;
                           -fx-font-weight: bold;
                           -fx-border-color: #E6C229;
                           -fx-border-width: 2;
                           -fx-border-radius: 5;"
                    prefWidth="150"
                    prefHeight="80"
                    onAction="#handleEditBook"/>
        </HBox>

        <HBox spacing="60" alignment="CENTER">
            <Button text="Delete Book"
                    style="-fx-background-color: #FFF5E1;
                           -fx-text-fill: #333333;
                           -fx-font-weight: bold;
                           -fx-border-color: #E6C229;
                           -fx-border-width: 2;
                           -fx-border-radius: 5;"
                    prefWidth="150"
                    prefHeight="80"
                    onAction="#handleDeleteBook"/>
            <Button text="View Books"
                    style="-fx-background-color: #FFF5E1;
                           -fx-text-fill: #333333;
                           -fx-font-weight: bold;
                           -fx-border-color: #E6C229;
                           -fx-border-width: 2;
                           -fx-border-radius: 5;"
                    prefWidth="150"
                    prefHeight="80"
                    onAction="#handleViewBooks"/>
        </HBox>

        <HBox spacing="60" alignment="CENTER">
            <Button text="Manage User"
                    style="-fx-background-color: #FFF5E1;
                           -fx-text-fill: #333333;
                           -fx-font-weight: bold;
                           -fx-border-color: #E6C229;
                           -fx-border-width: 2;
                           -fx-border-radius: 5;"
                    prefWidth="150"
                    prefHeight="80"
                    onAction="#handleManageAccounts"/>
            <Button text="Search"
                    style="-fx-background-color: #FFF5E1;
                           -fx-text-fill: #333333;
                           -fx-font-weight: bold;
                           -fx-border-color: #E6C229;
                           -fx-border-width: 2;
                           -fx-border-radius: 5;"
                    prefWidth="150"
                    prefHeight="80"
                    onAction="#handleSearch"/>
        </HBox>

        <HBox spacing="60" alignment="CENTER">
            <Button text="Reports"
                    style="-fx-background-color: #FFF5E1;
                           -fx-text-fill: #333333;
                           -fx-font-weight: bold;
                           -fx-border-color: #E6C229;
                           -fx-border-width: 2;
                           -fx-border-radius: 5;"
                    prefWidth="150"
                    prefHeight="80"
                    onAction="#handleReports"/>
            <Button text="Fines"
                    style="-fx-background-color: #FFF5E1;
                           -fx-text-fill: #333333;
                           -fx-font-weight: bold;
                           -fx-border-color: #E6C229;
                           -fx-border-width: 2;
                           -fx-border-radius: 5;"
                    prefWidth="150"
                    prefHeight="80"
                    onAction="#handleFines"/>
        </HBox>
    </VBox>

    <VBox spacing="20"
          alignment="CENTER"
          AnchorPane.topAnchor="120.0"
          AnchorPane.rightAnchor="50.0">
        <VBox alignment="CENTER"
              style="-fx-background-color: white;
                     -fx-border-color: #B0C4DE;
                     -fx-border-width: 1;
                     -fx-padding: 10;">
            <Label text="Total Members"
                   style="-fx-text-fill: #2C3E50;
                          -fx-font-weight: bold;"/>
            <Label fx:id="totalMembersLabel"
                   style="-fx-text-fill: #4A7CB6;"/>
        </VBox>

        <VBox alignment="CENTER"
              style="-fx-background-color: white;
                     -fx-border-color: #B0C4DE;
                     -fx-border-width: 1;
                     -fx-padding: 10;">
            <Label text="Total Books"
                   style="-fx-text-fill: #2C3E50;
                          -fx-font-weight: bold;"/>
            <Label fx:id="totalBooksLabel"
                   style="-fx-text-fill: #4A7CB6;"/>
        </VBox>

        <VBox alignment="CENTER"
              style="-fx-background-color: white;
                     -fx-border-color: #B0C4DE;
                     -fx-border-width: 1;
                     -fx-padding: 10;">
            <Label text="Borrowed Books"
                   style="-fx-text-fill: #2C3E50;
                          -fx-font-weight: bold;"/>
            <Label fx:id="borrowedBooksLabel"
                   style="-fx-text-fill: #4A7CB6;"/>
        </VBox>

        <VBox alignment="CENTER"
              style="-fx-background-color: white;
                     -fx-border-color: #B0C4DE;
                     -fx-border-width: 1;
                     -fx-padding: 10;">
            <Label text="Overdue Books"
                   style="-fx-text-fill: #2C3E50;
                          -fx-font-weight: bold;"/>
            <Label fx:id="overdueBooksLabel"
                   style="-fx-text-fill: #4A7CB6;"/>
        </VBox>
    </VBox>
</AnchorPane>